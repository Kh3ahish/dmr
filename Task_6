<body>
    <div class="container">
        <h1>Order Form for Computer Components</h1>
        <form id="orderForm">
            <!-- Customer Information Section -->
            <fieldset>
                <legend>Customer Information</legend>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required>
            </fieldset>

            <!-- Component Selection Section -->
            <fieldset id="components">
                <legend>Select Components</legend>
                <div class="component">
                    <label for="componentType">Component Type:</label>
                    <select id="componentType" name="componentType" required>
                        <option value="CPU">CPU</option>
                        <option value="GPU">GPU</option>
                        <option value="RAM">RAM</option>
                    </select>
                    <button type="button" onclick="addComponent()">Add Component</button>
                </div>
            </fieldset>

            <!-- Submit Button -->
            <button type="submit">Submit Order</button>
        </form>
    </div>

    <script>
        function addComponent() {
            const componentSection = document.getElementById('components');
            const componentType = document.getElementById('componentType').value;

            // Create a new component group
            const newComponent = document.createElement('div');
            newComponent.className = 'component-group';
            newComponent.innerHTML = `
                <label>${componentType} Manufacturer:</label>
                <input type="text" name="${componentType.toLowerCase()}Manufacturer" required>

                <label>${componentType} Model:</label>
                <input type="text" name="${componentType.toLowerCase()}Model" required>

                <label>Quantity:</label>
                <input type="number" name="${componentType.toLowerCase()}Quantity" min="1" required>

                <button type="button" onclick="removeComponent(this)">Remove ${componentType}</button>
            `;
            
            componentSection.appendChild(newComponent);
        }

        function removeComponent(button) {
            button.parentElement.remove();
        }

        // Form submission
        document.getElementById('orderForm').addEventListener('submit', function(event) {
            event.preventDefault();
            alert('Your order has been submitted!');
        });
    </script>
</body>
</html>
